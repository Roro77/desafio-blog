<h1>Post</h1>

<table class = "table">
        <tr>
            <th>Titulo</th>
            <th>Imagen</th>
            <th>Contenido</th>
            <th>Fecha</th>
        </tr>
        <% @posts.present? && @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= image_tag post.image_url %></td>
            <td><%= post.content %></td>
            <td><%= post.created_at %></td>
        </tr>
        <% end %>   
</table>